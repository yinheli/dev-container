# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Dockerfile specific settings
[Dockerfile*]
indent_style = tab
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# YAML files (GitHub Actions, Docker Compose, etc.)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Rust files
[*.rs]
indent_style = space
indent_size = 4

# Java files
[*.java]
indent_style = space
indent_size = 4

# C/C++ files
[*.{c,cpp,cc,cxx,h,hpp}]
indent_style = space
indent_size = 2

# Makefile
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# Configuration files
[*.{conf,config,ini,toml}]
indent_style = space
indent_size = 2

# Package manager files
[{package.json,package-lock.json,yarn.lock,pnpm-lock.yaml,Cargo.toml,Cargo.lock,go.mod,go.sum}]
indent_style = space
indent_size = 2
